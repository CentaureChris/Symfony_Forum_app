{% extends 'base.html.twig' %}

{% block title %}Comments index{% endblock %}

{% block body %}
<div id="body">
    <h1>Comments index</h1>

    <table class="table" id="table-list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_date</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.createdDate ? comment.createdDate|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ comment.message }}</td>
                <td>
                    <a href="{{ path('app_comments_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('app_comments_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_comments_new') }}" id="create">Create new</a>
</div>
{% endblock %}
