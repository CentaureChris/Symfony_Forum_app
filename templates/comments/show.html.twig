{% extends 'base.html.twig' %}

{% block title %}Comments{% endblock %}

{% block body %}
<div id="body" class="show">
    <h1>Comments {{ comment.id }} - From Post {{ comment.post }}</h1>
        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Created Date</th>
                <th>From post:</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.message }}</td>
                <td>{{ comment.createdDate ? comment.createdDate|date('Y-m-d') : '' }}</td>
                <td>{{ comment.post }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comments_index') }}">back to list</a>

    <a href="{{ path('app_comments_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comments/_delete_form.html.twig') }}
</div>
{% endblock %}
