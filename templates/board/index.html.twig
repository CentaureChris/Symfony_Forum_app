{% extends 'base.html.twig' %}

{% block title %}Board index{% endblock %}

{% block body %}
<div id="body">
    <h1>Board index</h1>

    <table class="table" id="table-list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for board in boards %}
            <tr>
                <td>{{ board.id }}</td>
                <td>{{ board.name }}</td>
                <td>{{ board.createdDate ? board.createdDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_board_show', {'id': board.id}) }}">Show</a>
                    <a href="{{ path('app_board_edit', {'id': board.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_board_new') }}" id="create">Create new</a>
</div>
{% endblock %}
