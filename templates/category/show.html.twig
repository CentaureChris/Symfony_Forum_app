{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div id="body" class="show">
    <h1>Category {{ category.name }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.createdDate ? category.createdDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}">Back to list</a>
    <a href="{{ path('app_category_edit', {'id': category.id}) }}">Edit</a>

    {% for role in app.user.roles %}
        {% if role == 'ROLE_INSIDER' %}
            {{ include('category/_delete_form.html.twig') }}
        {% endif %}
    {% endfor %}
</div>
{% endblock %}
