{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div id="body">
    <h1>User index</h1>

    <table class="table" id="table-list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% if users %}
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                {# <td>{{ user.password }}</td> #}
                {% if user.status == 1 %}
                <td>Actif</td>
                {% else %}
                <td>Inactif</td>
                {% endif %}
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        {% endif %}

        </tbody>
    </table>
    <a href="{{ path('app_user_new') }}" id="create">Create new</a>
</div>
{% endblock %}